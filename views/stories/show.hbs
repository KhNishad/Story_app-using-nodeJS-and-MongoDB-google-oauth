<div class="row">
    <div class="col s12 m8">
        <h3>{{storyy.title}}
            <small>{{{editIcon storyy.user user storyy._id false}}}</small>
        </h3>
        <div class="card story">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{storyy.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{storyy.user.displayName}}</span>
                <img src="{{storyy.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/stories/user/{{storyy.user._id}}">More From {{storyy.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>